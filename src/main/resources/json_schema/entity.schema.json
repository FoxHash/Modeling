{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "title" : "Entity",
  "description" : "An entity of an erd.",
  "type" : "object",
  "properties" : {
    "id" : {
      "description" : "Name of the entity",
      "type" : "string"
    },
    "weak_entity" : {
      "description" : "Flag to mark the entity as a weak entity",
      "type" : "boolean"
    },
    "attributes" : {
      "description" : "Connected attributes to this entity",
      "type" : "array",
      "items" : {
        "type" : "object",
        "properties" : {
          "name" : {
            "description" : "Name of the attribute",
            "type" : "string"
          },
          "property" : {
            "description" : "Property of the attribute",
            "type" : "string",
            "enum" : [
              "attribute",
              "key attribute",
              "weak key attribute",
              "compounded value attribute",
              "multi value attribute",
              "derived value attribute"
            ]
          }
        },
        "required" : [
          "name",
          "property"
        ]
      },
      "minItems": 1
    }
  },
  "required" : [
    "id",
    "weak_entity"
  ]
}